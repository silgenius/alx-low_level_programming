NAME = school
CC = gcc
SRC = main.c foo.c bar.c
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

$(OBJ): %.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: all clean oclean fclean re

