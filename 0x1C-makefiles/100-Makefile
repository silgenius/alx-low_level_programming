CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
FLAG := $(CFLAGS)

.PHONY: $(NAME) clean oclean fclean re all
all: $(NAME)

$(foreach file, $(SRC), $(eval $(file:.c=.o): $(file) ; $(CC) $(CFLAGS) -c -o $(file:.c=.o) $(file)))
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
